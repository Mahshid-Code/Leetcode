# Python

class Solution(object):
    def addDigits(self, num):
        """
        :type num: int
        :rtype: int
        """
        if num<10:
            return num
        elif num%9:
            return num%9
        else:
            return 9
            
            
            
        
  # C++:
  
  class Solution {
public:
    int addDigits(int num) {
        if (num<10)
            return num;
        else
            if(num%9)
                return num%9;
            else
                return 9;
        };
           
          
};
